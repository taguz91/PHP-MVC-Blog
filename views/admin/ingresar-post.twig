{% extends "layout.twig" %}

{% block content %}
  <p>
    <a class="btn btn-secondary"
    href="{{ 'admin/posts' | url }}">Volver</a>
  </p>

  {% if errores %}
    {{ include('partials/errores.twig') }}
  {% endif %}

  {% if r %}
    <div class="alert alert-success">
      Se guardo correctamente el post.
    </div>
  {% endif %}

  <form onsubmit="return validar()"  method="post">
    <div class="form-group">
      <label for="titulo">Titulo:</label>
      <input type="text" class="form-control"
      name="titulo" id="iTitulo">
    </div>
    <div class="form-group">
      <label for="img">Url imagen:</label>
      <input type="text" class="form-control" name="img" value="">
    </div>
    <div class="">
      <label for="contenido">Contenido:</label>
      <textarea class="form-control" name="contenido" rows="5">
      </textarea>
      <br>
      <input type="submit" class="btn btn-success" value="Guardar">
    </div>

  </form>

{% endblock %}

{% block js %}
  <script>
    function validar() {
      var titulo = document.getElementById('iTitulo').value.trim();
      if (titulo === '') {
        //alert('noooooooo');
        /*swal(
          'Oops...',
          'El titulo es obligatorio!',
          'error'
        );*/
        alert('noooooooo');
        return false;
      }
    }
  </script>
{% endblock %}
